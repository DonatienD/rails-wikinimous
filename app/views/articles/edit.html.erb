<h1>Edit article</h1>

<%= link_to "Delete article",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit %>
<% end %>
